<h1>(自分の題名)</h1>
<div class="new-big-container">

<h3>新規投稿ページ</h3>
<%= form_for @food do |f| %>

# データ型がstringで自由記述の入力フォーム
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

# データ型がtextで自由記述の入力フォーム
  <div class="field">
    <%= f.label :content  %>
    <%= f.text_area :content, :size => "30x2" %>
  </div>

  <div class='form-group'>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-check'>
          <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
          <% end %>
      </div>
  <% end %>
</div>

  <%= f.submit "投稿する" %>
<% end %>
</div>

<%= link_to "一覧に戻る", foods_path %>

<%= stylesheet_link_tag 'new', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@food, :url => { controller:'foods', action:'create'})do |f| %>
    <%= f.label :投稿内容 %>
        <br>
        <%= f.text_field :content,size: 140%>
        <br>
    <%= f.submit "送信"%>
    <br>
    <% end %>
</div>